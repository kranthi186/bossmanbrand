<section class="resetpassword">
  <div class="container">
	<div class="resetpassword_content">
      <h1>{{ 'customer.reset_password.title' | t }}</h1>
      {% form 'reset_customer_password' %}
        <p style="margin: 0 0 20px">{{ 'customer.reset_password.subtext' | t: email: email }}</p>
        {{ form.errors | default_errors }}
		<div class="input_wrap">
        	<label for="ResetPassword">{{ 'customer.reset_password.password' | t }}</label>
        	<input type="password" value="" name="customer[password]" id="ResetPassword" class="input-full{% if form.errors contains 'password' %} error{% endif %}" placeholder="{{ 'customer.reset_password.password' | t }}">
      	</div>
      	<div class="input_wrap">
        	<label for="PasswordConfirmation">{{ 'customer.reset_password.password_confirm' | t }}</label>
        	<input type="password" value="" name="customer[password_confirmation]" id="PasswordConfirmation" class="input-full{% if form.errors contains 'password_confirmation' %} error{% endif %}" placeholder="{{ 'customer.reset_password.password_confirm' | t }}">
      	</div>
        <input type="submit" class="btn" value="{{ 'customer.reset_password.submit' | t }}">
      {% endform %}
    </div>
  </div>
</section>

<style>
  h1 {margin: 30px 0 0}
  label:after {display: none}
  .resetpassword_content form {display: flex; flex-direction: column; width: 50%}
  .resetpassword_content .input_wrap {display: flex; flex-direction: column;}
  .input_wrap label {font-size: 14px; font-family: 'PT Sans', sans-serif; font-style: italic; margin: 0 0 10px}
  .resetpassword_content form input { padding: 20px 15px; border: 1px solid #efefef; margin-bottom: 30px}
  .btn {width: 100%}
  @media only screen and (max-width : 768px) {
    .resetpassword_content form {width: 100%}
    h1 {margin: 30px 0 20px}
  }
</style>