<footer class="footer">
  <div class="brands">
    <div class="container">
      <div class="brands_content">
        {% for i in (1..7) %}
        	{% assign number = i | downcase  %}
        	{% assign brand = "brand" | append: number  %}
          {% assign img_src = brand | append: '.png' %}
          {%- assign load_img_src = img_src | asset_img_url: '10x' -%}
          {%- assign load_img_class = 'img-responsive-footer' -%}
          <img {% include '__opt_load_img' src:load_img_src class:load_img_class %} alt="Brand {{i}}" />
          <!-- <img src="{{ brand | append: '.png' | asset_url }}" alt="Brand {{i}}"> -->
        {% endfor %}
      </div>
    </div>
  </div>
  <div class="footer_menu">
    <div class="container">
      <div class="footer_menu_content">
        <div class="social">
			{% include 'social-menu' %}
        </div>
        <div class="footer_menu_links">
          <div class="list_link">
            <ul>
				{% include 'footer-menu' %}
            </ul>
          </div>
          {% comment %}{% include 'search-bar' %}{% endcomment %}
        </div>
        <div class="bossman">
          <a href="https://bossmanbrand.com" class="logo">Bossman</a>
          {% comment %}<!--p class="bossman_callus">Questions& Give us a call:</p-->
          <!--p class="phone">877-579-3620</p-->{% endcomment %}
        </div>
      </div>
    </div>
  </div>
  <div class="copyright">
    <a href="https://bossmanbrand.com">bossmanbrand.com</a>
    COPYRIGHT Â© 2019, BOSSMAN. ALL RIGHTS RESERVED.
  </div>
</footer>


