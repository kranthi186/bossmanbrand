{% assign icon_class = "w-1/2 md:w-1/3 lg:w-1/4 mb-16 lg:mb-0 px-2 lg:px-5" %}

{% assign icon_title_class = "nmr-title-dark text-center mb-5 text-2xl" %}
{% assign icon_image_class = "nmr-icon mb-8 p-3" %}
{% assign icon_subtitle_class = "nmr-para text-center" %}
{% if product.metafields.accentuate.product_image %}
    {% assign product_image = product.metafields.accentuate.product_title %}
{% else %}
    {% assign product_image = product.featured_image %}
{% endif %}

{% if product.metafields.accentuate.show_information_module %}
    <div class="container mx-auto max-w-4xl mb-24">
        <div class="flex flex-wrap items-center">
            <div class="order-2 md:order-1 w-full sm:w-1/3 order-2 sm:order-1">
                <div class="lazy nmr-image-square bg-center bg-contain bg-no-repeat" data-bg="url({{ product_image | img_url: 'large' }})"></div>
            </div>
            <div class="order-1 md:order-2 w-full sm:w-2/3 p-8 sm:p-0 sm:pl-10 order-1 sm:order-2">
                <h1 class="text-4xl nmr-title mb-5">{{ product.metafields.accentuate.product_title }}</h1>
                <div class="nmr-para leading-snug mb-2">{{ product.metafields.accentuate.product_description }}</div>
            </div>
        </div>
    </div>
    {% if product.metafields.accentuate.icon %}
        <div class="container mx-auto mb-24">
            <div class="flex flex-wrap justify-center m-0 md:px-0 md:-mx-5">
                {% for icon in product.metafields.accentuate.icon %}
                    <div class="{{ icon_class }}">
                        <div class="nmr-pitch-point flex flex-col">
                            <div class="{{ icon_image_class }}">
                                <img class="mx-auto h-32 w-auto" data-src="{{ icon }})">
                            </div>
                            <div class="{{ icon_title_class }}">{{ product.metafields.accentuate.icon_text[forloop.index0] }}</div>
                            <div class="{{ icon_subtitle_class }}">{{ product.metafields.accentuate.icon_description[forloop.index0] | strip_html}}</div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    {% endif %}

    <style type="text/css">

        #shopify-section-nmr-module-product-info {
            margin: 5em 0;
        }

        .nmr-para-sm,
        .nmr-para,
        .nmr-para-lg {
            display: block;
        }

        .nmr-para-sm {
            font-size: 17px;
            line-height: 20px;
        }

        .nmr-para {
            font-size: 17px;
            line-height: 20px;
        }

        .nmr-para-lg {
            font-size: 23px;
            line-height: 20px;
        }

        .nmr-container {
            width: 100%;
            margin: 0 auto;
        }

        .nmr-container-sm {
            max-width: 856px;
        }

        .nmr-container-md {
            max-width: 1200px;
        }

        .nmr-container-lg {
            max-width: 1440px;
        }

        .nmr-content-box {
            width: auto !important;
            margin: 8em -1em;
        }

        .nmr-container .nmr-flex-box {
            display: flex;
            flex-direction: row;
            flex-wrap: wrap;

            width: auto;
            justify-content: center;
        }
    </style>
{% endif %}


{% schema %}
{
    "name": "Product Info",
    "tag": "section" 
}
{% endschema %}