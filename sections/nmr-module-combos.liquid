{% if product.metafields.accentuate.show_combos_module %}
    <div class="py-24 bg-cover bg-center bg-no-repeat">
        <div class="mb-10 px-5">
            <h2 class="nmr-title-dark text-4xl text-center leading-tight mb-5">{{ product.metafields.accentuate.combos_title }}</h2>
        </div>
        <div class="container max-w-4xl">
            <div class="flex flex-wrap justify-center m-0 sm:-mx-8">
                {% for combo in collections[product.metafields.accentuate.combos_collection].products limit:4 %}
                    <a href="{{ combo.url }}" class="w-full sm:w-1/2 md:w-1/3 px-8">
                        <div class="combo">
                            <div class="lazy nmr-image-square bg-center bg-contain bg-no-repeat" data-bg="url({{ combo.featured_image | img_url: 'large' }})"></div>
                            <div class="mt-5 mb-2 tracking-widest uppercase font-bold text-sm text-center leading-snug">{{ combo.title }}</div>
                            <div class="text-sm font-bold flex justify-center items-center">
                                <div class="text-red-500 mr-2">{{ combo.price | money }}
                                    <i class="fas fa-arrow-circle-right" style="color: #C0964A !important"></i>
                                </div>
                            </div>
                        </div>
                    </a>
                {% endfor %}
            </div>
        </div>
    </div>
{% endif %}

{% schema %}

{
    "name": "NMR Module Combos",
    "tag": "section"
}

{% endschema %}

