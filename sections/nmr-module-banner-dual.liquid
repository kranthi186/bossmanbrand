{% if product.metafields.accentuate.show_dual_banner_module %}
    <div class="py-8 bg-yellow-600 relative bg-cover bg-center bg-no-repeat" style="background-color: {{ product.metafields.accentuate['2_column_banner_description'] }};">
        <div class="absolute top-0 left-0 w-full h-full" id="bg-animation"></div>
        <div class="relative container px-8">
            <div class="flex flex-wrap -mx-4 items-center justify-center">
                <div class="w-full px-4 mb-12 md:w-1/2 lg:w-2/5">
                    <h2 class="nmr-title-light text-4xl md:text-5xl leading-tight mb-5">
                        {{ product.metafields.accentuate['2_column_banner_title'] }}
                    </h2>
                    <div class="text-lg md:text-xl text-white leading-snug">
                        {{ product.metafields.accentuate['2_column_banner_description'] }}
                    </div>
                </div>
                <div class="w-full px-4 md:w-1/2 lg:w-3/5">
                    <div class="nmr-image-square bg-image-square bg-contain bg-center" 
                    data-bg="url({{ product.metafields.accentuate['2_column_banner_image'] }})"></div>
                </div>
            </div>
        </div>
    </div>
{% endif %}

{% schema %}

{
    "name": "NMR Module Banner",
    "tag": "section"
}

{% endschema %}

