<div class="guarantee">
  {% for block in section.blocks %}
  <div class="guarantee_box">
    <img src="{{ block.settings.guarantee_box_image | img_url }}" alt="Money back">
    <div>{{ block.settings.guarantee_box_text}}</div>
  </div>
  {% endfor %}
</div>

{% schema %}
  {
        "name":"Guarantee Box Section",
        "settings":[
        ],
		"blocks":[
			{
				"type":"text",
				"name":"Brands",
				"settings":[
					{
						"type":"image_picker",
						"id":"guarantee_box_image",
						"label":"Select Image"
					},
                    {
						"type":"text",
						"id":"guarantee_box_text",
						"label":"Text"
					}
				]
			}
		]
    }
{% endschema %}

<style>
  
    .product_guarantee-box {
        width: 37%;
        float: right;
        text-align: left;
        padding: 10px 0;
        clear:both;
    }

	.guarantee {
      display: inline-block;
      border: 1px solid #e8e9eb;
      margin-bottom: 10px;
      width: 100%;
      text-align: center;
    }

    .guarantee_box {
        text-align: center;
        display: inline-block;
        padding: 10px 0;
        width: 32%;
        vertical-align: top;
    }

    .guarantee_box img {
        text-align: center;
        display: block;
        margin: auto;
    }

    .guarantee_box div {
      line-height: 1.3;
      padding-top: 10px;
    }
  
  @media ( max-width: 850px ) {
  
    .product_guarantee-box {
        width: 100%;
    }
    
  }

</style>

